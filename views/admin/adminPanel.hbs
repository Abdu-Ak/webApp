<body>
  <header>
    <div class="row d-flex navbar-expand gx-0">
      <nav class="navbar navbar-light justify-content-evenly">

        <div class="logo">
          <img src="/public/images/logo.jpeg" height="80" width="180" />
        </div>



        <div class="logout">
          <a href="/logout"><button class="btn btn-primary me-5" type="submit">logout</button></a>
        </div>




      </nav>
    </div>
  </header>
  <hr>

  <div class="adminlogo d-flex justify-content-center">
    <img src="/public/images/ADMINPANEL (1).png" height="80" width="300" class="mt-2" />
  </div>

  <section>
    


    <div class="table-responsive m-5 p-5">
       <div class="d-flex justify-content-end me-5 pt-5 ">
          <a href="/admin/addUser" class="me-5"><button class="btn btn-success me-5" type="submit">Add User</button></a>
        </div>

      <table id="userTable" class="table table-secondary table-hover  table-bordered border-dark" >

        <thead>
          <tr>
            
            <th scope="col">FIRST NAME</th>
            <th scope="col">LAST NAME</th>
            <th scope="col">E-MAIL</th>
            <th scope="col">OPTION</th>
          </tr>
        </thead>

        <tbody>
          {{#each users}}
          <tr>
            
            <td>{{this.firstName}}</td>
            <td>{{this.lastName}} </td>
            <td>{{this.email}}</th>
            <td style="width: 20%;"> <div class="d-flex ">
          <a href="/admin/editUser/{{this._id}}"><button class="btn btn-primary m-3 " type="submit">Edit</button></a>
          <a href="/admin/deleteUser?id={{this._id}}"><button class="btn btn-danger m-3 " onclick=" return confirm('Are you want to delete {{this.firstName}} ?')  " type="submit">Delete</button></a>
        </div>
        
        </td>
          </tr>
          {{/each}}
        </tbody>


      </table>

    </div>

  </section>

  
   

 <script type="text/javascript" charset="utf8" src="https://code.jquery.com/jquery-3.5.1.js"></script>
